{
    "compilerOptions": {
        "target": "esnext",
        "baseUrl": "./src",
        "jsx": "react",
        "paths": {
            "@app/*": ["./*"],
            "@store": ["./store/index"],
            "@components": ["./components/index"],
            "@modules/*": ["./modules/*"],
            "@containers/*": ["./containers/*"],
            "@pages/*": ["./pages/*"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*", "build"]
}
